<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_inherit" model="ir.ui.view">
            <field name="name">product_template_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="groups">hakbani_product_purchase_tab_access.group_product_purchase_tab_access</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_product_inherit" model="ir.ui.view">
            <field name="name">product_product_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="attributes">
                    <attribute name="groups">hakbani_product_purchase_tab_access.group_product_purchase_tab_access</attribute>
                </xpath>
            </field>
        </record>

    </data>

</odoo>
