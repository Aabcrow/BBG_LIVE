<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Res Company -->
    <record id="res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Add Fiscal information -->
            <xpath expr="//notebook" position="inside">
                <page string="Custom header/footer">
                    <group col="4">
                        <field name="custom_header"/>
                        <field name="img_custom_header"
                               attrs="{'invisible':[('custom_header','!=',True)]}"/>
                        <field name="custom_footer"/>
                        <field name="img_custom_footer"
                               attrs="{'invisible':[('custom_footer','!=',True)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>