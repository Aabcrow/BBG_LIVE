<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_margin_report_wizard" model="ir.ui.view">
            <field name="name">product_margin_report_wizard</field>
            <field name="model">product.margin.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Export Xlsx" name="generate_product_margin_xlsx" type="object"
                                default_focus="1" class="btn-primary"/>
<!--                        <button string="Export PDF" name="generate_product_margin_pdf" type="object"-->
<!--                                default_focus="1" class="btn-primary"/>-->
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_margin_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Product margin report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.margin.report.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_margin_report_wizard" />
            <field name="target">new</field>
        </record>


        <record id="menuitem_single_location_products_report" model="ir.ui.menu">
            <field name="name">Product margin report</field>
            <field name="action" ref="product_margin_report_wizard_action"/>
            <field name="parent_id" ref="sale.menu_sale_report"/>
            <field name="sequence" type="int">99</field>
        </record>

    </data>
</odoo>
