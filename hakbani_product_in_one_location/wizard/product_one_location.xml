<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_in_one_location_wizard_view" model="ir.ui.view">
            <field name="name">product_in_one_location_wizard_view</field>
            <field name="model">one.location.product.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="name" invisible="1" />
                            <field name="file" filename="name" invisible="1"  readonly="1" />
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button string="Export Xlsx" name="generate_product_location_xlsx" type="object"
                                default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_in_one_location_action" model="ir.actions.act_window">
            <field name="name">Product One Location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">one.location.product.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_in_one_location_wizard_view" />
            <field name="target">new</field>
        </record>

        <menuitem id="product_in_one_location_menu" name="Product One Location" parent="stock.menu_warehouse_report"
                  action="product_in_one_location_action"/>
    </data>
</odoo>
