<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="tsleem_invoices_form" model="ir.ui.view">
        <field name="name">tsleem.invoices.form</field>
        <field name="model">tsleem.invoices</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approve,post"/>
                    <button name="action_submit" type="object" class="btn-primary" string="Submit" states="draft"  groups="hakbani_pettycash.manager,hakbani_pettycash.submit"/>
                    <button name="action_approve" type="object" class="btn-primary" string="Approve" states="submitted" groups="hakbani_pettycash.manager,hakbani_pettycash.approval"/>
                    <button name="function_posted_all" type="object" class="btn-primary" string="Post" states="approve" groups="hakbani_pettycash.manager,hakbani_pettycash.postal"/>
                </header>
                <sheet  >
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_bills_payment" type="object"
                                class="oe_stat_button" icon="fa-bars" context="{'action_to':'bill'}">
                            <field name="bills_count"/>
                            <span>Bills</span>
                        </button><button name="action_open_bills_payment" type="object"
                                class="oe_stat_button" icon="fa-bars" context="{'action_to':'payment'}">
                            <field name="bills_count"/>
                            <span>Payment</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="order_number" force_save="1"/>
                        </h1>
                        <h3>
                            <label for="employee_id"/>
                            <field name="employee_id" attrs="{'readonly':[('state','in',['approve', 'post'])]}" options="{'no_create':True}" style="width:100%%"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly':[('state','in',['approve', 'post'])]}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','in',['approve', 'post'])]}"/>
                            <field name="journal_id" required="1" attrs="{'readonly':[('state','in',['approve', 'post'])]}"/>
                        </group>
                    </group>
                    <notebook >
                        <page string="Purchase Bills">
                            <sheet>
                                <field name="tsleem_invoices_line_id" attrs="{'readonly':[('state','in',['post'])]}">
                                    <tree editable="buttom">
                                        <button name="function_posted" type="object"
                                                groups="account.group_account_manager"
                                                string="Posted"
                                                attrs="{'invisible': [('state', '!=', 'draft')]}" optional="hide"/>
                                        <button name="function_cancel" type="object"
                                                groups="account.group_account_manager"
                                                string="Cancel"
                                                attrs="{'invisible': [('state', '!=', 'posted')]}" optional="hide"/>
                                        <field name="tsleem_invoices_id" invisible="1" force_save="1"/>
                                        <field name="supplier_id"
                                               context="{'supplier_search': 1,'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': 1}"
                                        />
                                        <!--                                        <field name="supplier_id"  domain="[('supplier_rank','>',0)]"-->
                                        <!--                                        context="{'supplier_search': 1,'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': 1}"-->
                                        <!--                                        />-->
                                        <!--                                        <field name="supplier_id" readonly="0" domain="[('supplier_rank','>',0)]"-->
                                        <!--                                        context="{'supplier_search': 1,'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': 1}"-->
                                        <!--                                        />-->
                                        <!--                                        <field name="tax_supplier_id" readonly="0" domain="[('supplier_rank','>',0)]"-->
                                        <!--                                        context="{'tax_supplier_search': 1,'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': 1}"-->
                                        <!--                                        />-->
                                        <field name="ref"/>
                                        <field name="date_invoice"/>
                                        <!--field name="construction_id"/-->
                                        <field name="analytic_account_id" optional="hide"/>
                                        <field name="product_id"/>
                                        <field name="ref_product" readonly="1" force_save="1" optional="show"/>
                                        <field name="price_unit" sum="Total"/>
                                        <field name="tax_id" widget="many2many_tags"/>
                                        <field name="tax_amount" sum="Total"/>
                                        <field name="price_unit_after_tax" sum="Total"/>
                                        <field name="invoice_id" readonly="1" optional="hide"/>
                                        <field name="payment_id" readonly="1" optional="hide"/>
                                        <field name="state" readonly="1" optional="hide"/>
                                    </tree>
                                </field>
                            </sheet>
                        </page>
                    </notebook>
                    <group>
                        <group>
                            <field name="create_uid" readonly="1"/>
                            <field name="submitted_uid" readonly="1"/>
                            <field name="approve_uid" readonly="1"/>
                            <field name="post_uid" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tsleem_invoices_tree" model="ir.ui.view">
        <field name="name">tsleem.invoices.tree</field>
        <field name="model">tsleem.invoices</field>
        <field name="arch" type="xml">
            <tree string="Invoices">
                <field name="order_number" string="Sequence"/>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="journal_id"/>
                <field name="amount_tax"/>
                <field name="amount_untaxed"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>
    <record id="tsleem_invoices_action" model="ir.actions.act_window">
        <field name="name">Petty Cash</field>
        <field name="res_model">tsleem.invoices</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create First Form.
            </p>
        </field>
    </record>
    <menuitem id="tsleem_invoices_menu" parent="account_accountant.menu_accounting"
              name="Petty Cash" groups="hakbani_pettycash.manager,hakbani_pettycash.user,hakbani_pettycash.submit,hakbani_pettycash.approval,,hakbani_pettycash.postal"/>
    <menuitem id="tsleem_invoices_sub_menu" parent="tsleem_invoices_menu" action="tsleem_invoices_action"
              name="Petty Cash"/>

</odoo>
