<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pay_loan_wizard_view" model="ir.ui.view">
            <field name="name">pay_loan_wizard_view</field>
            <field name="model">pay.loan.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="ref"/>
                        </group>
                        <group>
                            <field name="journal_id" domain="[('type', 'in', ('bank', 'cash'))]"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Pay" name="create_loan_payment_entry" type="object"
                                default_focus="1" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="pay_loan_action" model="ir.actions.act_window">
            <field name="name">Pay Loan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pay.loan.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="pay_loan_wizard_view" />
            <field name="target">new</field>
        </record>

    </data>
</odoo>
