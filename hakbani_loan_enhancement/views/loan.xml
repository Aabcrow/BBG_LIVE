<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_loan_form_inherit" model="ir.ui.view">
        <field name="name">hr_loan_form_inherit</field>
        <field name="model">hr.loan</field>
        <field name="inherit_id" ref="ohrms_loan.hr_loan_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="reset_to_draft" class="oe_highlight"
                        attrs="{'invisible': [('state', '=', 'draft')]}"
                        string="Reset To Draft" type="object" groups="hakbani_loan_enhancement.group_loan_reset_to_draft"/>
                <button name="%(pay_loan_action)d"  class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'approve')]}"
                        string="Pay Loan" type="action" groups="hakbani_loan_enhancement.group_loan_pay"/>
            </xpath>
        </field>
    </record>

</odoo>
