<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="invoice_layout">
            <div class="header">
                <div>
                    <div>
                        <img width="100%" src="/hakbani_invoice_report/static/src/img/header.jpg"/>
                    </div>
                </div>
            </div>
            <div t-attf-class="article"
                 t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8')}}); background-size:240mm 222mm; width:240mm; height:222mm;"
                 t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
            </div>
            <div class="footer">
                <style>
                    @font-face {
                    font-family: 'Myriad-Regular';
                    font-style: bold;
                    font-weight: 1200;
                    src:url(/hakbani_invoice_report/static/src/fonts/Myraid/Myriad-Pro-Regular.ttf) format('truetype');
                    }
                    @font-face {
                    font-family: 'Droid-Regular';
                    font-style: bold;
                    font-weight: 1200;
                    src:url(/hakbani_invoice_report/static/src/fonts/Droid/Droid-Arabic-Kufi-Regular.ttf) format('truetype');
                    }
                </style>
                <div class="row">
                    <div class="col-5" style="text-align:left;font-size:11pt;font-family:Myriad-Regular;color:#961B29;font-weight: bold;">
                        Payment Reference <![CDATA[ &nbsp; ]]> : <![CDATA[ &nbsp; ]]> <span t-field="docs.name"/><br/>
                        Payment terms <![CDATA[ &nbsp; ]]> : <![CDATA[ &nbsp; ]]> Immediate Payment <br/>
                        <span style="font-size:12pt;">VAT <![CDATA[ &nbsp; ]]> : <![CDATA[ &nbsp; ]]> 311143440700003</span>
                    </div>
                    <div class="col-2 custom_footer" style="text-align:center;font-size:10pt;font-family:Myriad-Regular;vertical-align: bottom;font-weight: bold;">
                        <span style="vertical-align: bottom;"><span class="page" />/<span class="topage" /></span>
                    </div>
                    <div class="col-5" style="text-align:right;font-size:11pt;font-family:Droid-Regular;color:#961B29;font-weight: bold;">
                        <span t-field="docs.name"/> <![CDATA[ &nbsp; ]]> : <![CDATA[ &nbsp; ]]> رقم إشارة الدفعة <br/>
                        سداد فوري <![CDATA[ &nbsp; ]]> : <![CDATA[ &nbsp; ]]> شروط السداد
                    </div>
                </div>
            </div>
        </template>
        <template id="report_custom_invoice_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="hakbani_invoice_report.invoice_layout">
                        <div class="page">
<!--                            <div class="watermark"-->
<!--                                 t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8')}}); background-size:240mm 222mm; width:240mm; height:222mm;">-->
                                <style type="text/css">
                                    @font-face {
                                    font-family: 'Myriad-Regular';
                                    font-style: bold;
                                    font-weight: 1200;
                                    src:url(/hakbani_invoice_report/static/src/fonts/Myraid/Myriad-Pro-Regular.ttf) format('truetype');
                                    }
                                    @font-face {
                                    font-family: 'Droid-Regular';
                                    font-style: bold;
                                    font-weight: 1200;
                                    src:url(/hakbani_invoice_report/static/src/fonts/Droid/Droid-Arabic-Kufi-Regular.ttf) format('truetype');
                                    }
                                </style>
                                <div class="row" style="margin-top:30px;">
                                    <div class="col-3">
                                        <img t-if="o.l10n_sa_qr_code_str"
                                             style="display:block;text-align:center;"
                                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.l10n_sa_qr_code_str, 120, 120)"/>
                                    </div>
                                    <div class="col-5" style="font-size:11pt;font-family:Myriad-Regular;font-weight: bold;color:#961B29;">
                                        <span>Main center - Riyadh City</span><br/>
                                        <span>PO Box 390807 Riyadh 11365</span><br/>
                                        <span>Telefax +966 11 242 7855</span><br/>
                                        <span>malbalwi@bbg.com.sa</span><br/>
                                        <span>Customer Service: 053 9090 658</span>
                                    </div>
                                    <div class="col-4" style="font-size:11pt;text-align:right;font-family:Droid-Regular;font-weight: bold;color:#961B29;">
                                        <span>المركز الرئيسي - الرياض</span><br/>
                                        <span>ص ب 390807 الرياض 11365</span><br/>
                                        <span>+966 11 242 7855 <span>تليفاكس</span></span><br/>
                                        <span>المملكة العربية السعودية</span><br/>
                                        <span>053 9090 658 <span>خدمة العملاء</span></span>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:20px;direction: ltr;">
                                    <div class="col-6">
                                        <table width="100%" style="font-size:10pt;font-family:Myriad-Regular;font-weight: bold;">
                                            <tr>
                                                <b><td style="text-align:left;font-weight: bold;">Invoice Date</td></b>
                                                <b><td style="text-align:center;"><span t-field="o.invoice_date"/></td></b>
                                                <b><td style="text-align:right;font-family:Droid-Regular;">تاريخ الفاتورة</td></b>
                                            </tr>
                                            <tr style="border-top:1px solid #961B29;">
                                                <b><td style="text-align:left;font-weight: bold;">Due Date</td></b>
                                                <b><td style="text-align:center;"><span t-field="o.invoice_date_due"/></td></b>
                                                <b><td style="text-align:right;font-family:Droid-Regular;">تاريخ الاستحقاق</td></b>
                                            </tr>
                                            <tr>
                                                <b><td style="text-align:left;font-weight: bold;">Delivery Date</td></b>
                                                <b><td style="text-align:center;"><span t-field="o.l10n_sa_delivery_date"/></td></b>
                                                <b><td style="text-align:right;font-family:Droid-Regular;">تاريخ التوصيل</td></b>
                                            </tr>
                                            <tr style="border-top:1px solid #961B29;">
                                                <b><td style="text-align:left;font-weight: bold;">Source</td></b>
                                                <b><td style="text-align:center;"><span t-field="o.invoice_origin"/></td></b>
                                                <b><td style="text-align:right;font-family:Droid-Regular;">رقم المرجع</td></b>
                                            </tr>
                                            <tr>
                                                <b><td style="text-align:left;font-weight: bold;">Invoice Type</td></b>
                                                <b><td style="text-align:center;"><span t-field="o.invoice_payment_type"/></td></b>
                                                <b><td style="text-align:right;font-family:Droid-Regular;">نوع الفاتورة</td></b>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6" style="direction: rtl;">
                                        <address style="font-size:10pt;font-family:Droid-Regular;text-align:right;font-weight: bold;" t-field="o.partner_id"
                                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:20px;">
                                    <div style="font-size:15pt;font-weight: bold;" class="col-6">
                                        <span t-if="o.move_type == 'out_invoice'" style="font-family:Myriad-Regular;text-align:left;font-color:#000000;">Tax Invoice</span>
                                        <span t-if="o.move_type == 'in_invoice'" style="font-family:Myriad-Regular;text-align:left;font-color:#000000;">Vendor Bill</span>
                                        <span t-if="o.move_type == 'out_refund'" style="font-family:Myriad-Regular;text-align:left;font-color:#000000;">Customer Credit Note</span>
                                        <span t-if="o.move_type == 'in_refund'" style="font-family:Myriad-Regular;text-align:left;font-color:#000000;">Vendor Credit Note</span>
                                        <span style="font-family:Myriad-Regular;text-align:right;padding-left:40px;" t-field="o.name"/><br/>
                                        <span t-if="o.move_type == 'out_invoice'" style="font-family:Droid-Regular;text-align:left;color:#961B29;">فاتورة ضريبية</span>
                                        <span t-if="o.move_type == 'in_invoice'" style="font-family:Droid-Regular;text-align:left;color:#961B29;">فاتورة</span>
                                        <span t-if="o.move_type == 'out_refund'" style="font-family:Droid-Regular;text-align:left;color:#961B29;">إشعار دائن (مرتجع)</span>
                                        <span t-if="o.move_type == 'in_refund'" style="font-family:Droid-Regular;text-align:left;color:#961B29;">مرتجع فاتورة</span>
                                    </div>
                                    <div class="col-6" style="text-align:right;">
                                        <b>
                                            <span style="font-size:12pt;font-family:Droid-Regular;text-align:right;font-color:#000000;">رقم تسجيل ضريبة القيمة المضافة للعميل</span>
                                            <br/>
                                            <span style="font-size:12pt;font-family:Myriad-Regular;text-align:right;font-color:#961B29;color:#961B29;padding-right:40px;" t-field="o.partner_id.vat"/>
                                        </b>
                                    </div>
                                </div>
                                <table style="width:100%;margin-top:20px;">
                                    <thead>
                                        <tr style="border-top:1px solid #961B29;border-bottom:1px solid #961B29;">
                                            <th style="width:27%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Description</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">الوصف</span>
                                            </th>
                                            <th style="width:12%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Quantity</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">الكمية</span>
                                            </th>
                                            <th style="width:12%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Unit Price</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">سعر الوحدة</span>
                                            </th>
                                            <th style="width:12%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Taxes</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">الضريبة</span>
                                            </th>
                                            <th style="width:12%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Amount</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">مبلغ</span>
                                            </th>
                                            <th style="width:12%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">VAT Amount</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;"> قيمة الضريبة</span>
                                            </th>
                                            <th style="width:13%;text-align:center;">
                                                <span style="font-family:Myriad-Regular;font-size: 10pt;">Total Price</span><br/>
                                                <span style="font-family:Droid-Regular;font-size: 10pt;">السعر الاجمالي</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody" style="font-size: 10pt;">
                                        <t t-foreach="o.invoice_line_ids" t-as="l">
                                            <tr>
                                                <td style="text-align:left;">
                                                    <span t-field="l.name"/>
                                                </td>
                                                <td style="text-align:center;">
                                                    <span t-field="l.quantity"/>
                                                </td>
                                                <td style="text-align:center;">
                                                    <span t-field="l.price_unit"/>
                                                </td>
                                                <td style="text-align:center;">
                                                    <t t-if="l.tax_ids" t-foreach="l.tax_ids" t-as="tax">
                                                        <span t-field="tax.name"/>
                                                    </t>
                                                </td>
                                                <td style="text-align:center;">
                                                    <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                                <td style="text-align:center;">
                                                    <span t-field="l.l10n_gcc_invoice_tax_amount" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                                <td style="text-align:center;">
                                                    <t t-esc="l.price_subtotal + l.l10n_gcc_invoice_tax_amount"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <br/>
                                <div class="row">
                                    <div class="col-8">
                                        <table width="100%">
                                            <tr style="border-top:1px solid #961B29;">
                                                <td width="40%" style="font-size: 10pt;">
                                                    <strong>
                                                        Total Without Taxes
                                                        <![CDATA[ &nbsp; ]]>
                                                        <span style="font-family:Amiri-Regular;">الاجمالي الفرعي</span>
                                                    </strong>
                                                </td>
                                                <td class="text-right" width="50%" style="font-size: 10pt;">
                                                    <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-size: 10pt;">
                                                    Taxes
                                                    <![CDATA[ &nbsp; ]]>
                                                    <span style="font-family:Amiri-Regular;">الضريبة</span>
                                                </td>
                                                <td class="text-right" width="40%" style="font-size: 10pt;">
                                                    <span t-field="o.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="50%" style="font-size: 10pt;">
                                                    <strong>
                                                        Total
                                                        <![CDATA[ &nbsp; ]]>
                                                        <span style="font-family:Amiri-Regular;">الاجمالي</span>
                                                    </strong>
                                                </td>
                                                <td class="text-right" width="40%" style="font-size: 10pt;">
                                                    <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-4"></div>
                                </div>
                            </div>
<!--                        </div>-->
                    </t>
                </t></t>
        </template>
    </data>
</openerp>
