<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <odoo>
            <record id="hr_leave_allocation_view_form_manager_inherit" model="ir.ui.view">
                <field name="name">hr_leave_allocation_view_form_manager_inherit</field>
                <field name="model">hr.leave.allocation</field>
                <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
                <field name="arch" type="xml">
                    <field name="employee_id" position="replace">
                        <field name="employee_id"
                               attrs="{'invisible': ['|', ('holiday_type', '!=', 'employee'), ('employee_id', '=', False)],
                                       'readonly':[('state','!=','draft')]}"/>
                    </field>
                </field>
            </record>
            <record id="hr_leave_view_form_manager_inherit" model="ir.ui.view">
                <field name="name">hr_leave_view_form_manager_inherit</field>
                <field name="model">hr.leave</field>
                <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
                <field name="arch" type="xml">
                    <field name="employee_id" position="replace">
                        <field name="employee_id"
                               attrs="{'invisible': ['|', ('holiday_type', '!=', 'employee'), ('employee_id', '=', False)],
                                       'readonly':[('state','not in',('draft','confirm'))]}"/>
                        <label for="remaining_leaves"/>
                        <div class="o_row">
                            <field name="remaining_leaves" force_save="1" nolabel="1" class="oe_inline"/>
                            <div class="o_row"
                            >
                                <span attrs="{'invisible': [('leave_type_request_unit', '=', 'hour')]}">Days</span>
                                <span attrs="{'invisible': [('leave_type_request_unit', '!=', 'hour')]}">Hours</span>
                            </div>
                        </div>

                    </field>
                </field>
            </record>
        </odoo>
    </data>
</openerp>
