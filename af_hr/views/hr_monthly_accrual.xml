<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="af_view_hr_hr_monthly_accrual_form" model="ir.ui.view">
            <field name="name">af_view_hr_hr_monthly_accrual_form</field>
            <field name="model">hr.monthly.accrual</field>
            <field name="arch" type="xml">
                <form duplicate="false" delete="false">
                    <header>
                        <button name="action_draft" type="object" string="Set Draft" groups="hr.group_hr_user"
                                states="confirmed,cancel" id="toinspect" class="oe_highlight"/>

                        <button name="action_confirm" type="object" string="Confirm" groups="hr.group_hr_user"
                                attrs="{'invisible':[('state','!=','draft')]}" id="toinspect" class="oe_highlight"/>

                        <button name="update_employees_by_department" type="object"
                                string="Update Employees Departments" groups="hr.group_hr_user"
                                states="draft,confirm" class="oe_highlight"/>

                        <button name="action_done" type="object" string="Done" groups="hr.group_hr_manager"
                                attrs="{'invisible':[('state','!=','confirm')]}" id="toinspect" class="oe_highlight"/>

                        <button name="action_cancel" type="object" string="Cancel" groups="hr.group_hr_user"
                                attrs="{'invisible':[('state','not in',('confirm','draft'))]}" id="toinspect"
                                class=""
                        />

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>

                    </header>

                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"
                                       attrs="{'readonly':[('state', '!=','draft')]}"
                                       colspan="2"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="department_ids"
                                       widget="many2many_tags"
                                       attrs="{'readonly':[('state', '!=','draft')]}"/>
                                <field name="months"
                                />
                                <field name="duration"
                                       attrs="{'readonly':[('state', '!=','draft')]}"/>
                                <field name="total_duration"
                                />
                                <field name="leave_type_id" required="1"
                                       domain="[('requires_allocation','=','yes')]"
                                       attrs="{'readonly':[('state', '!=','draft')]}"/>
                                <field name="allocation_id" readonly="1"
                                       attrs="{'invisible':[('allocation_id', '=',False)]}"/>

                            </group>
                            <group>
                                <field name="time_limit" attrs="{'readonly':[('state', '!=','draft')]}"/>
                                <lable for="date_from">Validity Period</lable>
                                <field name="date_from" nolabel="1"
                                       attrs="{'readonly':[('state', '!=','draft')]}" required="1"/>
                                <field name="date_to"
                                       placeholder="No limit"
                                       attrs="{'readonly':[('state', '!=','draft')],'required':[('time_limit','=',True)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employees">
                                <field name="employee_ids"
                                       attrs="{'readonly':[('state', '!=','draft')]}"
                                />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="af_view_hr_hr_monthly_accrual_tree" model="ir.ui.view">
            <field name="name">af_view_hr_hr_monthly_accrual_tree</field>
            <field name="model">hr.monthly.accrual</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" colspan="2" readonly="1"/>
                    <field name="department_ids"
                           attrs="{'readonly':[('state', '!=','draft')]}"/>
                    <field name="date_from"
                           attrs="{'readonly':[('state', '!=','draft')]}"/>
                    <field name="date_to"
                           attrs="{'readonly':[('state', '!=','draft')]}"/>
                    <field name="leave_type_id"/>
                    <field name="duration"/>
                    <field name="state"
                           attrs="{'readonly':[('state', '!=','draft')]}"/>
                </tree>
            </field>
        </record>

        <record id="act_window_hr_hr_monthly_accrual" model="ir.actions.act_window">
            <field name="name">Monthly accrual</field>
            <field name="res_model">hr.monthly.accrual</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_monthly_accrual_menu"
                  name="Monthly accrual"
                  parent="hr_holidays.menu_hr_holidays_configuration"
                  action="act_window_hr_hr_monthly_accrual"
                  sequence="10"
        />

    </data>
</odoo>