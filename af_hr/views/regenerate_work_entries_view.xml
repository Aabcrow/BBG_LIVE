<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_work_entry_regeneration_wizard_inherit" model="ir.ui.view">
            <field name="name">hr_work_entry_regeneration_wizard_inherit</field>
            <field name="model">hr.work.entry.regeneration.wizard</field>
            <field name="inherit_id" ref="hr_work_entry_contract.hr_work_entry_regeneration_wizard"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="before">
                    <field name="multiple_employees"/>

                </field>
                <field name="employee_id" position="attributes">
                    <attribute name="attrs">
                        {'invisible':[('multiple_employees','=',True)],'required':[('multiple_employees','=',False)]}
                    </attribute>
                </field>
                <xpath expr="//form" position="inside">
                    <notebook>
                        <page string="Employees" attrs="{'invisible':[('multiple_employees','=',False)]}">
                            <field name="employee_ids" attrs="{'invisible':[('multiple_employees','=',False)]}"/>
                        </page>
                    </notebook>
                </xpath>
                <button name="regenerate_work_entries" position="after">
                    <button name="regenerate_we_multiple"
                            string="Regenerate multiple entries"
                            type="object" class="oe_highlight"
                            attrs="{'invisible':[('multiple_employees','=',False)]}"/>
                </button>
            </field>
        </record>

    </data>
</odoo>