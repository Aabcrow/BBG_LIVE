<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Views -->
    <record id="view_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">view.product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="responsible_id" position="after">
                <field name="min_sale_price" attrs="{'invisible':1}"
                />
            </field>
        </field>
    </record>


    <record id="view_stock_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="taxes_id" position="after">
                <field name="min_sale_price" attrs="{'readonly':[('min_price_editable','=',False)]}"/>
                <field name="min_price_editable" attrs="{'invisible':1}"/>
            </field>

        </field>
    </record>


    <record model="ir.ui.view" id="product_product_normal_form_view">
        <field name="name">product.product.normal.view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="taxes_id" position="after">
                <field name="min_sale_price" attrs="{'readonly':[('min_price_editable','=',False)]}"/>
                <field name="min_price_editable" attrs="{'invisible':1}"/>
            </field>
        </field>
    </record>

</odoo>