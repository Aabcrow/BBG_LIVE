<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="account_move_view_form_inherit" model="ir.ui.view">
        <field name="name">account_move_view_form_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[1]" position="attributes">
                <attribute name="groups">
                    account.group_account_invoice,Ntech_Customer_Invoice.group_account_invoice_personal
                </attribute>
            </xpath>
            <xpath expr="//header/button[2]" position="attributes">
                <attribute name="groups">
                    account.group_account_invoice,Ntech_Customer_Invoice.group_account_invoice_personal
                </attribute>
            </xpath>
            <button name="button_cancel" position="attributes">
                <attribute name="groups">Ntech_Customer_Invoice.group_cancel_invoice</attribute>
            </button>
            <button name="button_draft" position="attributes">
                <attribute name="groups">Ntech_Customer_Invoice.group_reset_invoice</attribute>
            </button>
        </field>
    </record>
</odoo>


